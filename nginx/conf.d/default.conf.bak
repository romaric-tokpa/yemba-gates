# =============================================================================
# CONFIGURATION DÉVELOPPEMENT (sans SSL)
# =============================================================================
# Renommez ce fichier en default.conf pour le développement local

server {
    listen 80;
    server_name localhost;

    client_max_body_size 50M;

    # Frontend
    location / {
        proxy_pass http://frontend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # API Backend
    location ~ ^/(auth|jobs|candidates|applications|interviews|kpi|shortlists|notifications|offers|onboarding|history|teams|admin|client-interview-requests|health|docs|openapi.json)(/.*)?$ {
        proxy_pass http://backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300;
    }

    # Fichiers statiques
    location /static/ {
        alias /var/www/static/;
    }

    location /uploads/ {
        alias /var/www/uploads/;
    }
}
